{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@gallatin/interfaces": [
        "libs/interfaces/src"
      ],
      "@gallatin/interfaces/*": [
        "libs/interfaces/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}