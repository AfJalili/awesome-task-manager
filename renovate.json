{
  "extends": [
    "config:base",
    "schedule:daily",
    ":automergeMinor",
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone",
    ":prImmediately"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^eslint", "lint-staged", "prettier", "^@typescript-eslint"],
      "labels": ["linting"]
    },
    {
      "matchPackagePatterns": ["husky", "commitizen", "^@commitlint", "cz-conventional-changelog"],
      "labels": ["hooks"]
    },
    {
      "matchDepTypes": ["optionalDependencies"],
      "addLabels": ["optional"]
    }
  ],
  "ignorePaths": [".circleci/config.yml"]
}
